generator client {
  provider     = "prisma-client-js"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  role     Role    @default(USER)

  submissions Submission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Problem {
  id          String     @id @default(uuid())
  slug        String     @unique
  title       String
  description String
  difficulty  Difficulty
  starterCode Json

  timeLimit   Int @default(1000)
  memoryLimit Int @default(256)

  submissions Submission[]
  testCases   TestCase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TestCase {
  id       String  @id @default(uuid())
  input    String
  output   String
  isPublic Boolean @default(false)

  problemId String
  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Submission {
  id       String           @id @default(uuid())
  code     String
  language Language
  verdict  Verdict?
  testLogs Json?
  status   SubmissionStatus @default(PENDING)

  time            Int? @default(0)
  memory          Int? @default(0)
  testCasesPassed Int? @default(0)

  problemId String
  userId    String
  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Language {
  JAVASCRIPT
  PYTHON
}

enum SubmissionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum Verdict {
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT_EXCEEDED
  MEMORY_LIMIT_EXCEEDED
  COMPILATION_ERROR
  RUNTIME_ERROR
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum Role {
  USER
  ADMIN
}
