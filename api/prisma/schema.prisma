generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Language {
  JAVASCRIPT
  PYTHON
  JAVA
  TYPESCRIPT
}

enum SubmissionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum Verdict {
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT_EXCEEDED
  MEMORY_LIMIT_EXCEEDED
  COMPILATION_ERROR
  RUNTIME_ERROR
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  submissions Submission[]
}

model Submission {
  id        String           @id @default(uuid())
  code      String
  language  Language
  status    SubmissionStatus @default(PENDING)
  verdict   Verdict?
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}
