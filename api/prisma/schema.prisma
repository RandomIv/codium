generator client {
  provider     = "prisma-client-js"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  name        String?
  role        Role         @default(USER)
  submissions Submission[]
}

model Problem {
  id          String       @id @default(uuid())
  slug        String       @unique
  title       String
  description String
  difficulty  Difficulty
  timeLimit   Int          @default(1000)
  memoryLimit Int          @default(256)
  starterCode Json
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  submissions Submission[]
  testCases   TestCase[]
}

model TestCase {
  id        String   @id @default(uuid())
  input     String
  output    String
  isPublic  Boolean  @default(false)
  problemId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
}

model Submission {
  id        String           @id @default(uuid())
  code      String
  language  Language
  status    SubmissionStatus @default(PENDING)
  verdict   Verdict?
  userId    String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  problemId String
  testLogs  Json?
  problem   Problem          @relation(fields: [problemId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Language {
  JAVASCRIPT
  PYTHON
}

enum SubmissionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum Verdict {
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT_EXCEEDED
  MEMORY_LIMIT_EXCEEDED
  COMPILATION_ERROR
  RUNTIME_ERROR
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum Role {
  USER
  ADMIN
}
